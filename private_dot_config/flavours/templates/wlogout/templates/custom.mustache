* {
	background-image: none;
	box-shadow: none;
}

window {
	background-color: rgba(0, 0, 0, 0.6);
}

grid {
	padding: 0px 100px 0px 100px;
}

button {
	border-radius: 60px;
	border-color: #{{base03-hex}};
	border-style: inset;
	border-width: 6px;

	font-family: "DejaVu Sans Mono", monospace;
	font-size: small;
	font-weight: lighter;
	color: #CAD3F5;

	background-color: #{{base0F-hex}};
	background-repeat: no-repeat;
	background-position: 50% 15%;
	background-size: 50%;

	margin: 20px;
}

button:hover {
	border-radius: 80px;
	border-color: #{{base00-hex}};
	border-style: inset;
	border-width: 6px;
}

button:focus {
	border-radius: 80px;
	border-color: #{{base05-hex}};
	border-style: inset;
	border-width: 6px;
}

